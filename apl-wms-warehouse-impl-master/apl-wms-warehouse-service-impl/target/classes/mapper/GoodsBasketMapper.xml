<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.apl.wms.warehouse.mapper.GoodsBasketMapper">



    <!-- 查找详情 2019-12-21-->
    <select id="getById" resultType="com.apl.wms.warehouse.vo.GoodsBasketInfoVo">
        SELECT
          id, 
          basket_sn, 
          remark, 
          inner_org_id
        FROM
          goods_basket
        where
          id = #{id}
    </select>

    <!-- 查找列表 2019-12-21-->
    <select id="getList" resultType="com.apl.wms.warehouse.vo.GoodsBasketListVo">
        SELECT
           id, 
           basket_sn, 
           remark, 
           inner_org_id
        FROM
           goods_basket
        where
        1 = 1
        order by basket_sn
    </select>

    <!-- 检查记录是否重复 -->
    <select id="exists" resultType="com.apl.wms.warehouse.vo.GoodsBasketInfoVo">
        SELECT
           id,
           basket_sn
        FROM
           goods_basket
        WHERE
           (basket_sn = #{basketSn})
        <if test="id != null and id>0">
            AND id !=  #{id}
        </if>
    </select>

</mapper>
