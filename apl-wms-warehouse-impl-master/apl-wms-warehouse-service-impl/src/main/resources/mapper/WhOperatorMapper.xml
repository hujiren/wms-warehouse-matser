<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.apl.wms.warehouse.dao.WhOperatorMapper">


    <!-- 查找详情 2019-12-17-->
    <select id="getById" resultType="com.apl.wms.warehouse.vo.WhOperatorInfoVo">
        SELECT
          id, 
          member_id, 
          member_name, 
          member_position, 
          member_position_en, 
          wh_id, 
          inner_org_id
        FROM
          wh_operator
        where
          id = #{id}
    </select>

    <!-- 查找列表 2019-12-17-->
    <select id="getList" resultType="com.apl.wms.warehouse.vo.WhOperatorListVo">
        SELECT
        id,
        member_id,
        member_name,
        member_position,
        member_position_en,
        wh_id,
        inner_org_id
        FROM
        wh_operator
        where
        1 = 1
        <if test="kd.whId != null and kd.whId>0">
            AND wh_id = #{kd.whId}
        </if>
        order by id desc
    </select>

    <!-- 检查记录是否重复 -->
    <select id="exists" resultType="com.apl.wms.warehouse.vo.WhOperatorInfoVo">
        SELECT
        id,
        member_id
        FROM
        wh_operator
        WHERE
        1 = 1
        <if test="memberId != null and memberId > 0">
            AND member_id = #{memberId}
        </if>
        <if test="id != null and id>0">
            AND id != #{id}
        </if>
        <if test="whId != null and whId>0">
            AND wh_id = #{whId}
        </if>
    </select>

</mapper>
