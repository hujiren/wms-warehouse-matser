<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.apl.wms.warehouse.dao.CommodityPicMapper">


    <!-- 查找列表 2019-12-12-->
    <select id="getList" resultType="com.apl.wms.warehouse.vo.CommodityPicListVo">
        SELECT
        id, 
        commodity_id,
        img_url, 
        img_sort
        FROM
        commodity_pic
        where
        commodity_id=#{commodityId}
        order by img_sort
    </select>

    <!-- 查找列表 2019-12-12-->
    <!-- 查找列表 2019-12-12-->
    <select id="getMaxSoft" resultType="integer">
        SELECT
          max(img_sort) as img_sort
        FROM
        commodity_pic
        where
        commodity_id=#{commodityId}
    </select>


    <delete id="delByCommodityId">
        delete from commodity_pic where commodity_id = #{commodityId}
    </delete>

</mapper>
